<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Description</key>
	<string>Downloads latest Cisco Webex Audio Driver, builds an installation package, and imports it into Munki.</string>
	<key>Identifier</key>
	<string>com.github.foigus.munki.ciscowebexaudiodriver</string>
	<key>Input</key>
	<dict>
		<key>MUNKI_REPO_SUBDIR</key>
		<string>drivers/cisco</string>
		<key>NAME</key>
		<string>CiscoWebexAudioDriver</string>
		<key>pkginfo</key>
		<dict>
			<key>catalogs</key>
			<array>
				<string>development-cisco-CiscoWebexAudioDriver</string>
			</array>
			<key>category</key>
			<string>Productivity</string>
			<key>description</key>
			<string>This is a special audio driver package used to allow admins to pre-install the drivers on the end-user computers.</string>
			<key>developer</key>
			<string>Cisco</string>
			<key>display_name</key>
			<string>Cisco Webex Audio Driver</string>
			<key>name</key>
			<string>%NAME%</string>
			<key>postinstall_script</key>
			<string>#!/bin/bash
#Forget the receipt from the earlier AutoPkg-built package
receiptName=com.cisco.CiscoWebexAudioDriver.pkg

if `pkgutil --pkgs="${receiptName}" 2&gt;&amp;1 &gt; /dev/null`
then
	pkgutil --forget "${receiptName}"
fi</string>
			<key>postuninstall_script</key>
			<string>#!/bin/bash

#Trigger macOS to reload the audio drivers, including detecting the Cisco Webex Audio
#Driver has been removed.
launchctl kickstart -k system/com.apple.audio.coreaudiod</string>
			<key>unattended_install</key>
			<true/>
			<key>unattended_uninstall</key>
			<true/>
		</dict>
	</dict>
	<key>MinimumVersion</key>
	<string>0.2.0</string>
	<key>ParentRecipe</key>
	<string>com.github.foigus.download.ciscowebexaudiodriver</string>
	<key>Process</key>
	<array>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>pkg_path</key>
				<string>%RECIPE_CACHE_DIR%/unarchive/CiscoAudioDeviceInstall.pkg</string>
				<key>repo_subdirectory</key>
				<string>%MUNKI_REPO_SUBDIR%</string>
			</dict>
			<key>Processor</key>
			<string>MunkiImporter</string>
		</dict>
	</array>
</dict>
</plist>
