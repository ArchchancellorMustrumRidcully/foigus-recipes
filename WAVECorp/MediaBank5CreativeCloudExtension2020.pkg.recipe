				<string>%RECIPE_CACHE_DIR%/MediaBank5zxp_unarchive</string>
				<key>purge_destination</key>
				<true/>
			</dict>
			<key>Processor</key>
			<string>Unarchiver</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>re_pattern</key>
				<string>\t version="([\d\.]+)"</string>
				<key>result_output_var_name</key>
				<string>major_version</string>
				<key>url</key>
				<string>file:///%RECIPE_CACHE_DIR%/MediaBank5zxp_unarchive/MediaBank.mxi</string>
			</dict>
			<key>Processor</key>
			<string>URLTextSearcher</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>re_pattern</key>
				<string>Build Date - (\d+)&lt;br&gt;</string>
				<key>result_output_var_name</key>
				<string>build_date</string>
				<key>url</key>
				<string>file:///%RECIPE_CACHE_DIR%/MediaBank5zxp_unarchive/MediaBank.mxi</string>
			</dict>
			<key>Processor</key>
			<string>URLTextSearcher</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>pkgdirs</key>
				<dict>
					<key>Library</key>
					<string>0755</string>
					<key>Library/Application Support</key>
					<string>0755</string>
					<key>Library/Application Support</key>
					<string>0755</string>
					<key>Library/Application Support/Adobe</key>
					<string>0775</string>
					<key>Library/Application Support/Adobe/CEP</key>
					<string>0755</string>
					<key>Library/Application Support/Adobe/CEP/extensions</key>
					<string>0755</string>
					<key>Library/Application Support/Adobe/CEP/extensions/com.wavecorp.cm.plugin.MediaBank</key>
					<string>0755</string>
