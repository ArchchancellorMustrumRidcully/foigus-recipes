<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Description</key>
	<string>Downloads latest InPreflight Pro disk image and packages it for CC 2014.</string>
	<key>Identifier</key>
	<string>com.github.foigus.pkg.InPreflightProCC2014</string>
	<key>Input</key>
	<dict>
		<key>NAME</key>
		<string>InPreflightProCC2014</string>
	</dict>
	<key>MinimumVersion</key>
	<string>0.2.0</string>
	<key>ParentRecipe</key>
	<string>com.github.foigus.download.InPreflightPro</string>
	<key>Process</key>
	<array>
		<dict>
			<key>Processor</key>
			<string>Versioner</string>
			<key>Arguments</key>
			<dict>
				<key>input_plist_path</key>
				<string>%pathname%/InPreflight Pro Installer.app/Contents/Resources/appPackage/InPreflight Pro.app/Contents/Info.plist</string>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>PkgRootCreator</string>
			<key>Arguments</key>
			<dict>
				<key>pkgroot</key>
				<string>%RECIPE_CACHE_DIR%/pkgroot</string>
				<key>pkgdirs</key>
				<dict>
					<key>Applications</key>
					<string>0775</string>
					<key>Applications/Adobe InDesign CC 2014</key>
					<string>0775</string>
					<key>Applications/Adobe InDesign CC 2014/Plug-Ins</key>
					<string>0775</string>
					<key>Applications/Adobe InDesign CC 2014/Plug-Ins/Zevrix</key>
					<string>0755</string>
					<key>Applications/Adobe InDesign CC 2014/Scripts</key>
					<string>0775</string>
					<key>Applications/Adobe InDesign CC 2014/Scripts/startup scripts</key>
					<string>0775</string>
				</dict>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>Copier</string>
			<key>Arguments</key>
			<dict>
				<key>source_path</key>
				<string>%pathname%/InPreflight Pro Installer.app/Contents/Resources/Deliver.app</string>
				<key>destination_path</key>
				<string>%RECIPE_CACHE_DIR%/pkgroot/Applications/Deliver.app</string>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>Copier</string>
			<key>Arguments</key>
			<dict>
				<key>source_path</key>
				<string>%pathname%/InPreflight Pro Installer.app/Contents/Resources/appPackage/InPreflight Pro.app</string>
				<key>destination_path</key>
				<string>%RECIPE_CACHE_DIR%/pkgroot/Applications/Adobe InDesign CC 2014/Plug-Ins/Zevrix/InPreflight Pro.app</string>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>Copier</string>
			<key>Arguments</key>
			<dict>
				<key>source_path</key>
				<string>%pathname%/InPreflight Pro Installer.app/Contents/Resources/appPackage/InPreflight Pro.app/Contents/Resources/Scripts/InPreflight Pro.startup.scpt</string>
				<key>destination_path</key>
				<string>%RECIPE_CACHE_DIR%/pkgroot/Applications/Adobe InDesign CC 2014/Scripts/startup scripts/.InPreflight Pro.startup.scpt</string>
			</dict>
		</dict>
		<dict>
			<key>Processor</key>
			<string>PkgCreator</string>
			<key>Arguments</key>
			<dict>
				<key>pkg_request</key>
				<dict>
					<key>pkgroot</key>
					<string>%RECIPE_CACHE_DIR%/pkgroot</string>
					<key>pkgname</key>
					<string>%NAME%-%version%</string>
					<key>pkgtype</key>
					<string>flat</string>
					<key>id</key>
					<string>com.zevrix.InPreflightProCC2014.pkg</string>
					<key>version</key>
					<string>%version%</string>
					<key>chown</key>
					<array>
						<dict>
							<key>path</key>
							<string>Applications</string>
							<key>user</key>
							<string>root</string>
							<key>group</key>
							<string>admin</string>
						</dict>
					</array>
				</dict>
			</dict>
		</dict>
	</array>
</dict>
</plist>